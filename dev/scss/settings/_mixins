

/* ==========================================================================
   Border radius
   ========================================================================== */
@mixin border-radius($radius) {
  -webkit-border-radius: $radius;
     -moz-border-radius: $radius;
      -ms-border-radius: $radius;
          border-radius: $radius;
}


/* ==========================================================================
   Placeholder color
   ========================================================================== */

@mixin placeholder($color) {
  -webkit-color: $color;
     -moz-color: $color;
      -ms-color: $color;
       -o-color: $color;
          color: $color;
}


/* ==========================================================================
   A link, hover, active color
   ========================================================================== */

@mixin links ($link, $visited, $hover, $active) {
    & {
        color: $link;
        &:visited {
            color: $visited;
        }
        &:hover {
            color: $hover;
        }
        &:active, &:focus {
            color: $active;
        }
    }
}

/* ==========================================================================
   Button style
   ========================================================================== */

@mixin transition($in) {
    transition:$in;
    -webkit-transition:$in;
    -moz-transition:$in;
    -o-transition:$in;
    -ms-transition:$in;
}


@mixin transform($in) {
    transform:$in;
    -webkit-transform:$in;
    -moz-transform:$in;
    -o-transform:$in;
    -ms-transform:$in;
}


/* ==========================================================================
    Dot slideshow center
   ========================================================================== */


@mixin transform($in) {
    transform:translateX ($in);
    -webkit-transform:translateX ($in);
    -moz-transform:translateX ($in);
    -o-transform:translateX ($in);
    -ms-transform:translateX ($in);
}


