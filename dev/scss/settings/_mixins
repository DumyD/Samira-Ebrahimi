

/* ==========================================================================
   Border radius
   ========================================================================== */
@mixin border-radius($radius) {
  -webkit-border-radius: $radius;
     -moz-border-radius: $radius;
      -ms-border-radius: $radius;
          border-radius: $radius;
}


/* ==========================================================================
   Placeholder color
   ========================================================================== */

@mixin placeholder($color) {
  -webkit-color: $color;
     -moz-color: $color;
      -ms-color: $color;
       -o-color: $color;
          color: $color;
}


/* ==========================================================================
   A link, hover, active color
   ========================================================================== */

@mixin links ($link, $visited, $hover, $active) {
    & {
        color: $link;
        &:visited {
            color: $visited;
        }
        &:hover {
            color: $hover;
        }
        &:active, &:focus {
            color: $active;
        }
    }
}




/* ==========================================================================
    Dot slideshow center
   ========================================================================== */


@mixin transform($in) {
    transform:translateX ($in);
    -webkit-transform:translateX ($in);
    -moz-transform:translateX ($in);
    -o-transform:translateX ($in);
    -ms-transform:translateX ($in);
}



/* ==========================================================================
    Margin and padding
   ========================================================================== */



@mixin margin($top, $right, $bottom, $left) {
  margin-top: $top;
  margin-right: $right;
  margin-bottom: $bottom;
  margin-left: $left;
}



@mixin padding($top, $right, $bottom, $left) {
  padding-top: $top;
  padding-right: $right;
  padding-bottom: $bottom;
  padding-left: $left;
}

